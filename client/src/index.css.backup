@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400;500&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

/* Micro-interactions and animations */
@layer base {
  :root {
    /* Animation durations */
    --animation-duration-fast: 150ms;
    --animation-duration-normal: 250ms;
    --animation-duration-slow: 350ms;
    
    /* Easing functions */
    --ease-in-out: cubic-bezier(0.4, 0, 0.2, 1);
    --ease-out: cubic-bezier(0, 0, 0.2, 1);
    --ease-spring: cubic-bezier(0.34, 1.56, 0.64, 1);
    --ease-bounce: cubic-bezier(0.68, -0.55, 0.265, 1.55);
    
    /* Hover state variables */
    --hover-scale: 1.02;
    --hover-brightness: 1.1;
    --hover-shadow: 0 4px 12px rgba(0, 0, 0, 0.15);
    --hover-shadow-dark: 0 4px 12px rgba(0, 0, 0, 0.3);
  }
}

@layer components {
  /* Button micro-interactions */
  .btn-interactive {
    @apply transition-all duration-200;
    transition-timing-function: var(--ease-out);
    @apply hover:scale-[1.02] hover:brightness-110;
    @apply active:scale-[0.98] active:brightness-95;
    @apply focus:outline-none focus:ring-2 focus:ring-blue-500/50;
  }
  
  .btn-primary-interactive {
    @apply btn-interactive;
    @apply hover:shadow-lg hover:shadow-blue-500/25;
    @apply dark:hover:shadow-blue-400/20;
  }
  
  .btn-secondary-interactive {
    @apply btn-interactive;
    @apply hover:bg-gray-100 dark:hover:bg-gray-700;
    @apply hover:border-gray-300 dark:hover:border-gray-600;
  }
  
  .btn-ghost-interactive {
    @apply btn-interactive;
    @apply hover:bg-gray-100/80 dark:hover:bg-gray-800/80;
    @apply hover:backdrop-blur-sm;
  }
  
  /* Menu item interactions */
  .menu-item-interactive {
    @apply transition-all duration-150 ease-out;
    @apply hover:bg-gray-100 dark:hover:bg-gray-700;
    @apply hover:translate-x-1 hover:shadow-sm;
    @apply active:translate-x-0 active:scale-[0.99];
    @apply cursor-pointer relative overflow-hidden;
  }
  
  .menu-item-interactive::before {
    @apply content-[''] absolute left-0 top-0 h-full w-0;
    @apply bg-blue-500 transition-all duration-200 ease-out;
    @apply hover:w-1;
  }
  
  /* Tab interactions */
  .tab-interactive {
    @apply transition-all duration-200 ease-out;
    @apply hover:bg-gray-100 dark:hover:bg-gray-700;
    @apply hover:scale-[1.02] hover:shadow-sm;
    @apply data-[state=active]:bg-gray-200 dark:data-[state=active]:bg-gray-600;
    @apply data-[state=active]:shadow-inner;
  }
  
  /* Icon button interactions */
  .icon-btn-interactive {
    @apply transition-all duration-150 ease-out;
    @apply hover:scale-110 hover:rotate-6;
    @apply active:scale-95 active:rotate-0;
    @apply hover:shadow-md;
  }
  
  /* Card interactions */
  .card-interactive {
    @apply transition-all duration-250 ease-out;
    @apply hover:shadow-lg hover:shadow-gray-200/50;
    @apply dark:hover:shadow-gray-900/50;
    @apply hover:scale-[1.01] hover:-translate-y-1;
    @apply hover:border-gray-300 dark:hover:border-gray-600;
  }
  
  /* Input interactions */
  .input-interactive {
    @apply transition-all duration-200 ease-out;
    @apply hover:border-gray-400 dark:hover:border-gray-500;
    @apply focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20;
    @apply focus:scale-[1.01] focus:shadow-md;
  }
  
  /* Dropdown menu animations */
  .dropdown-enter {
    @apply animate-in fade-in-0 zoom-in-95 slide-in-from-top-2;
    @apply duration-200;
  }
  
  .dropdown-exit {
    @apply animate-out fade-out-0 zoom-out-95 slide-out-to-top-2;
    @apply duration-150;
  }
  
  /* Tooltip animations */
  .tooltip-enter {
    @apply animate-in fade-in-0 zoom-in-95;
    @apply duration-150;
  }
  
  /* File explorer item interactions */
  .file-item-interactive {
    @apply transition-all duration-150 ease-out;
    @apply hover:bg-blue-50 dark:hover:bg-blue-900/20;
    @apply hover:translate-x-2 hover:border-l-2 hover:border-blue-500;
    @apply active:translate-x-1 active:scale-[0.99];
    @apply cursor-pointer relative;
  }
  
  .file-item-interactive:hover .file-icon {
    @apply transform scale-110 rotate-3;
    @apply transition-transform duration-150 ease-out;
  }
  
  /* Sidebar panel interactions */
  .panel-interactive {
    @apply transition-all duration-300 ease-in-out;
    @apply hover:shadow-lg hover:shadow-gray-200/30;
    @apply dark:hover:shadow-gray-900/30;
  }
  
  /* Search bar interactions */
  .search-interactive {
    @apply transition-all duration-200 ease-out;
    @apply hover:shadow-md hover:shadow-blue-500/10;
    @apply focus-within:shadow-lg focus-within:shadow-blue-500/20;
    @apply focus-within:scale-[1.02] focus-within:border-blue-500;
  }
  
  /* Status indicator animations */
  .status-pulse {
    @apply animate-pulse;
  }
  
  .status-bounce {
    @apply animate-bounce;
  }
  
  /* Loading spinner enhancement */
  .spinner-enhanced {
    @apply animate-spin;
    animation-duration: 1s;
    animation-timing-function: cubic-bezier(0.4, 0, 0.6, 1);
  }
  
  /* Ripple effect for buttons */
  .ripple-effect {
    @apply relative overflow-hidden;
  }
  
  .ripple-effect::after {
    @apply content-[''] absolute top-1/2 left-1/2;
    @apply w-0 h-0 rounded-full bg-white/30;
    @apply transition-all duration-300 ease-out;
    @apply transform -translate-x-1/2 -translate-y-1/2;
    @apply pointer-events-none;
  }
  
  .ripple-effect:active::after {
    @apply w-full h-full;
    @apply opacity-0;
  }
  
  /* Stagger animations for lists */
  .stagger-item {
    @apply opacity-0 translate-y-4;
    animation: staggerFadeIn 0.3s ease-out forwards;
  }
  
  .stagger-item:nth-child(1) { animation-delay: 0ms; }
  .stagger-item:nth-child(2) { animation-delay: 50ms; }
  .stagger-item:nth-child(3) { animation-delay: 100ms; }
  .stagger-item:nth-child(4) { animation-delay: 150ms; }
  .stagger-item:nth-child(5) { animation-delay: 200ms; }
  .stagger-item:nth-child(n+6) { animation-delay: 250ms; }
}

@keyframes staggerFadeIn {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Custom scrollbar with hover effects */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  @apply bg-gray-100 dark:bg-gray-900;
  @apply rounded-full;
}

::-webkit-scrollbar-thumb {
  @apply bg-gray-400 dark:bg-gray-600;
  @apply rounded-full transition-all duration-200;
  @apply hover:bg-gray-500 dark:hover:bg-gray-500;
}

::-webkit-scrollbar-corner {
  @apply bg-gray-100 dark:bg-gray-900;
}

/* Perfect glass morphism effect */
.glass-morphism {
  @apply backdrop-blur-xl bg-white/10 dark:bg-black/10;
  @apply border border-white/20 dark:border-white/10;
  @apply shadow-xl;
}

/* Premium gradient backgrounds */
.gradient-premium {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.gradient-dark {
  background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
}

.gradient-success {
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
}

/* Smooth transitions for all interactive elements */
button, a, [role="button"] {
  @apply transition-all duration-200 ease-out;
}

/* Premium button styles */
.btn-premium {
  @apply relative overflow-hidden;
  @apply before:absolute before:inset-0 before:bg-gradient-to-r before:from-transparent before:via-white/20 before:to-transparent;
  @apply before:-translate-x-full hover:before:translate-x-full before:transition-transform before:duration-700;
}

/* Elegant focus styles */
*:focus-visible {
  @apply outline-none ring-2 ring-blue-500/50 ring-offset-2 ring-offset-gray-900;
}

/* Smooth page transitions */
.page-transition {
  animation: pageEnter 0.3s ease-out;
}

@keyframes pageEnter {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Premium tooltip styles */
.tooltip-premium {
  @apply bg-gray-900 text-white px-3 py-2 rounded-lg shadow-xl;
  @apply text-xs font-medium;
  @apply border border-gray-700;
}

/* Enhanced code editor styles */
.code-line-highlight {
  @apply bg-blue-500/10 border-l-2 border-blue-500;
}

.code-line-error {
  @apply bg-red-500/10 border-l-2 border-red-500;
}

.code-line-warning {
  @apply bg-yellow-500/10 border-l-2 border-yellow-500;
}

/* Advanced micro-interactions */
.hover-lift {
  @apply transition-all duration-200 ease-out;
}

.hover-lift:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.2);
}

.hover-scale {
  @apply transition-transform duration-200 ease-out;
}

.hover-scale:hover {
  transform: scale(1.05);
}

.hover-glow {
  @apply transition-all duration-300 ease-out;
}

.hover-glow:hover {
  box-shadow: 0 0 20px rgba(59, 130, 246, 0.5);
}

/* Button micro-interactions */
.btn-micro {
  @apply relative overflow-hidden transition-all duration-200 ease-out;
}

.btn-micro::before {
  content: '';
  @apply absolute inset-0 bg-white/10 transform -translate-x-full;
  transition: transform 0.3s ease-out;
}

.btn-micro:hover::before {
  transform: translateX(0);
}

.btn-micro:active {
  transform: scale(0.98);
}

/* Menu item micro-interactions */
.menu-micro {
  @apply relative transition-all duration-200 ease-out;
}

.menu-micro::after {
  content: '';
  @apply absolute bottom-0 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-400 to-purple-500;
  transition: width 0.3s ease-out;
}

.menu-micro:hover::after {
  @apply w-full;
}

.menu-micro:hover {
  @apply text-blue-400;
  padding-left: 1.25rem;
}

/* Card hover effects */
.card-hover {
  @apply transition-all duration-300 ease-out border-transparent;
}

.card-hover:hover {
  @apply border-blue-500/30 shadow-2xl;
  transform: translateY(-4px) scale(1.02);
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.05) 0%, rgba(147, 51, 234, 0.05) 100%);
}

/* Icon button animations */
.icon-hover {
  @apply transition-all duration-200 ease-out;
}

.icon-hover:hover {
  @apply text-blue-400;
  transform: rotate(5deg) scale(1.1);
}

.icon-hover:active {
  transform: rotate(0deg) scale(0.95);
}

/* Ripple effect for clicks */
@keyframes ripple {
  0% {
    transform: scale(0);
    opacity: 1;
  }
  100% {
    transform: scale(4);
    opacity: 0;
  }
}

.ripple-container {
  @apply relative overflow-hidden;
}

.ripple-container::after {
  content: '';
  @apply absolute inset-0 pointer-events-none;
  background-image: radial-gradient(circle, rgba(255, 255, 255, 0.5) 10%, transparent 10.01%);
  background-repeat: no-repeat;
  background-position: 50%;
  transform: scale(10, 10);
  opacity: 0;
  transition: transform 0.5s, opacity 1s;
}

.ripple-container:active::after {
  transform: scale(0, 0);
  opacity: 0.2;
  transition: 0s;
}

/* Tab hover animations */
.tab-hover {
  @apply relative transition-all duration-200 ease-out;
}

.tab-hover::before {
  content: '';
  @apply absolute inset-x-0 bottom-0 h-0.5 bg-gradient-to-r from-transparent via-blue-400 to-transparent;
  transform: scaleX(0);
  transition: transform 0.3s ease-out;
}

.tab-hover:hover::before {
  transform: scaleX(1);
}

.tab-hover:hover {
  @apply bg-gray-800/50;
}

/* Input focus animations */
.input-focus {
  @apply transition-all duration-200 ease-out border-gray-700;
}

.input-focus:focus {
  @apply border-blue-500 shadow-lg;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

/* Smooth scroll behavior */
html {
  scroll-behavior: smooth;
}

/* Pulse animation for notifications */
@keyframes pulse-glow {
  0%, 100% {
    opacity: 1;
    box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.7);
  }
  50% {
    opacity: 0.8;
    box-shadow: 0 0 0 10px rgba(59, 130, 246, 0);
  }
}

.pulse-notification {
  animation: pulse-glow 2s infinite;
}

/* Shake animation for errors */
@keyframes shake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-2px); }
  20%, 40%, 60%, 80% { transform: translateX(2px); }
}

.shake-error {
  animation: shake 0.5s ease-in-out;
}

/* Slide animations */
@keyframes slideInRight {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

@keyframes slideInLeft {
  from {
    transform: translateX(-100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

.slide-in-right {
  animation: slideInRight 0.3s ease-out;
}

.slide-in-left {
  animation: slideInLeft 0.3s ease-out;
}

/* Accessibility improvements */
@media (prefers-reduced-motion: reduce) {
  * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}

