@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply font-sans antialiased bg-background text-foreground;
    font-family: var(--font-sans);
  }
  
  .scrollbar-thin::-webkit-scrollbar {
    width: 6px;
    height: 6px;
  }
  
  .scrollbar-thin::-webkit-scrollbar-track {
    background: var(--dark-surface);
  }
  
  .scrollbar-thin::-webkit-scrollbar-thumb {
    background: var(--dark-border);
    border-radius: 3px;
  }
  
  .scrollbar-thin::-webkit-scrollbar-thumb:hover {
    background: hsl(220 13% 25%);
  }
}

/* Enhanced animations and transitions */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes slideIn {
  from { transform: translateX(-20px); opacity: 0; }
  to { transform: translateX(0); opacity: 1; }
}

@keyframes glow {
  0%, 100% { box-shadow: 0 0 5px var(--github-blue); }
  50% { box-shadow: 0 0 20px var(--github-blue), 0 0 30px var(--github-blue); }
}

@keyframes shimmer {
  0% { background-position: -200px 0; }
  100% { background-position: calc(200px + 100%) 0; }
}

.animate-fade-in {
  animation: fadeIn 0.3s ease-out;
}

.animate-slide-in {
  animation: slideIn 0.3s ease-out;
}

.animate-glow {
  animation: glow 2s ease-in-out infinite;
}

.shimmer {
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
  background-size: 200px 100%;
  animation: shimmer 1.5s infinite;
}

/* Enhanced glass morphism effects */
.glass {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.glass-dark {
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(15px);
  border: 1px solid rgba(255, 255, 255, 0.05);
}

/* Enhanced gradients */
.gradient-bg {
  background: linear-gradient(135deg, 
    var(--dark-bg) 0%, 
    var(--dark-surface) 25%, 
    var(--dark-bg) 50%, 
    var(--dark-surface) 75%, 
    var(--dark-bg) 100%);
  background-size: 400% 400%;
  animation: gradientShift 15s ease infinite;
}

@keyframes gradientShift {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

.gradient-text {
  background: linear-gradient(135deg, var(--github-blue), var(--success-green));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Enhanced shadows */
.shadow-glow {
  box-shadow: 0 0 20px rgba(33, 150, 243, 0.3);
}

.shadow-soft {
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
}

.shadow-elevated {
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

/* Enhanced borders */
.border-gradient {
  border: 1px solid transparent;
  background: linear-gradient(var(--dark-surface), var(--dark-surface)) padding-box,
              linear-gradient(135deg, var(--github-blue), var(--success-green)) border-box;
}

/* Enhanced hover effects */
.hover-lift {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.hover-lift:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
}

.hover-glow:hover {
  box-shadow: 0 0 20px var(--github-blue);
  border-color: var(--github-blue);
}

/* Enhanced buttons */
.btn-primary {
  background: linear-gradient(135deg, var(--github-blue), #1976d2);
  border: none;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s;
}

.btn-primary:hover::before {
  left: 100%;
}

.btn-secondary {
  background: var(--dark-surface);
  border: 1px solid var(--dark-border);
  color: var(--dark-text);
  transition: all 0.3s ease;
}

.btn-secondary:hover {
  background: var(--dark-border);
  border-color: var(--github-blue);
  color: var(--github-blue);
}

/* Enhanced cards */
.card-enhanced {
  background: var(--dark-surface);
  border: 1px solid var(--dark-border);
  border-radius: 12px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.card-enhanced::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent, var(--github-blue), transparent);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.card-enhanced:hover::before {
  opacity: 1;
}

.card-enhanced:hover {
  transform: translateY(-4px);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
  border-color: var(--github-blue);
}

/* Enhanced typography */
.text-gradient {
  background: linear-gradient(135deg, var(--dark-text), var(--github-blue));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.text-heading {
  font-weight: 600;
  letter-spacing: -0.025em;
  line-height: 1.2;
}

.text-body {
  line-height: 1.6;
  color: var(--muted-foreground);
}

/* Enhanced loading states */
.loading-skeleton {
  background: linear-gradient(90deg, var(--dark-surface) 25%, var(--dark-border) 50%, var(--dark-surface) 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: 6px;
}

/* Enhanced focus states */
.focus-enhanced:focus {
  outline: none;
  ring: 2px solid var(--github-blue);
  ring-offset: 2px;
  ring-offset-color: var(--dark-bg);
}

/* Mobile-specific enhancements */
@media (max-width: 768px) {
  /* Increase touch targets on mobile */
  button {
    min-height: 44px;
    min-width: 44px;
  }
  
  /* Improve text readability */
  body {
    font-size: 16px; /* Prevent zoom on iOS */
    -webkit-text-size-adjust: 100%;
  }
  
  /* Prevent horizontal scroll */
  body {
    overflow-x: hidden;
  }
  
  /* Improve touch scrolling */
  .scroll-area {
    -webkit-overflow-scrolling: touch;
  }
  
  /* Safe area handling for notched devices */
  .pb-safe {
    padding-bottom: env(safe-area-inset-bottom);
  }
  
  .pt-safe {
    padding-top: env(safe-area-inset-top);
  }
  
  .pl-safe {
    padding-left: env(safe-area-inset-left);
  }
  
  .pr-safe {
    padding-right: env(safe-area-inset-right);
  }
  
  /* Mobile-optimized animations */
  .animate-fade-in,
  .animate-slide-in {
    animation-duration: 0.2s;
  }
  
  /* Reduce motion for mobile performance */
  .hover-lift:hover {
    transform: none;
  }
}

/* Touch device specific improvements */
@media (hover: none) and (pointer: coarse) {
  /* Remove hover effects on touch devices */
  .hover\:bg-gray-50:hover {
    background-color: transparent;
  }
  
  /* Improve button tap feedback */
  button:active {
    transform: scale(0.98);
    transition: transform 0.1s ease;
  }
  
  /* Improve select feedback */
  .select-none {
    -webkit-user-select: none;
    user-select: none;
  }
}

/* Landscape orientation optimizations */
@media screen and (orientation: landscape) and (max-height: 500px) {
  /* Compact header on landscape mobile */
  .mobile-header {
    height: 40px;
  }
  
  /* Hide unnecessary elements in landscape */
  .landscape-hide {
    display: none;
  }
}

/* High DPI display optimizations */
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  /* Crisp text rendering on high DPI */
  body {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
}

/* Device-specific responsive classes */
.device-phone {
  --sidebar-width: 100vw;
  --editor-font-size: clamp(14px, 4vw, 18px);
  --button-size: 44px;
  --spacing-unit: 8px;
}

.device-tablet {
  --sidebar-width: 320px;
  --editor-font-size: clamp(14px, 2vw, 16px);
  --button-size: 40px;
  --spacing-unit: 12px;
}

.device-desktop {
  --sidebar-width: 280px;
  --editor-font-size: 14px;
  --button-size: 36px;
  --spacing-unit: 16px;
}

/* Orientation-specific adjustments */
.orientation-portrait.device-phone {
  --panel-height: calc(100vh - 160px);
  --touch-bar-height: 80px;
}

.orientation-landscape.device-phone {
  --panel-height: calc(100vh - 120px);
  --touch-bar-height: 60px;
}

/* Touch device optimizations */
.touch-device {
  --scroll-padding: 12px;
  --hover-opacity: 1;
}

.touch-device button,
.touch-device .clickable {
  min-height: var(--touch-target-min, 44px);
  min-width: var(--touch-target-min, 44px);
}

.no-touch {
  --scroll-padding: 8px;
  --hover-opacity: 0.8;
}

/* Network status indicators */
.online .network-status {
  color: hsl(var(--success-green));
}

.offline .network-status {
  color: hsl(var(--destructive));
}

/* Phone-specific layout optimizations */
.phone-layout .resizable-panel {
  min-width: 100vw;
}

.phone-layout .sidebar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: 50;
  transform: translateX(-100%);
  transition: transform 0.3s ease-in-out;
}

.phone-layout .sidebar.open {
  transform: translateX(0);
}

.phone-layout .editor-container {
  height: var(--panel-height);
  overflow: hidden;
}

.phone-layout .touch-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: var(--touch-bar-height);
  background: rgba(0, 0, 0, 0.95);
  backdrop-filter: blur(10px);
  border-top: 1px solid hsl(var(--border));
}

/* Tablet-specific optimizations */
.tablet-layout .sidebar {
  width: var(--sidebar-width);
}

.tablet-layout .touch-controls {
  display: block;
}

/* Desktop-specific optimizations */
.desktop-layout .mobile-only {
  display: none;
}

.desktop-layout .desktop-only {
  display: block;
}

/* Performance optimizations for mobile */
.device-phone * {
  transform: translateZ(0);
  backface-visibility: hidden;
}

.device-phone .editor-container {
  contain: layout style paint;
}

/* Touch gesture helpers */
.touch-device .scrollable {
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
}

.touch-device .pinch-zoom {
  touch-action: pinch-zoom;
}

.touch-device .pan-x {
  touch-action: pan-x;
}

.touch-device .pan-y {
  touch-action: pan-y;
}

/* Accessibility improvements for mobile */
.device-phone .focus-visible {
  outline: 3px solid hsl(var(--primary));
  outline-offset: 2px;
}

.device-phone .sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

/* Performance optimizations */
.no-animations * {
  animation-duration: 0s !important;
  transition-duration: 0s !important;
}

.touch-optimized {
  touch-action: manipulation;
}

.touch-optimized button,
.touch-optimized .clickable {
  min-height: 44px;
  min-width: 44px;
}

.gpu-accelerated {
  transform: translateZ(0);
  backface-visibility: hidden;
  perspective: 1000px;
}

.virtual-scrolling .scroll-container {
  contain: layout style paint;
  overflow-anchor: none;
}

.optimized-image {
  image-rendering: -webkit-optimize-contrast;
  image-rendering: crisp-edges;
}

.layout-optimized {
  contain: layout;
}

.efficient-animation {
  will-change: transform, opacity;
}

.efficient-animation:not(:hover):not(:focus) {
  will-change: auto;
}

/* Mobile performance optimizations */
@media (max-width: 768px) {
  * {
    -webkit-tap-highlight-color: transparent;
  }
  
  .scroll-container {
    -webkit-overflow-scrolling: touch;
    scroll-behavior: smooth;
  }
  
  /* Reduce repaints */
  .mobile-optimized {
    contain: layout style paint;
  }
  
  /* Optimize images for mobile */
  img {
    image-rendering: -webkit-optimize-contrast;
  }
}

/* Battery saving mode */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }
}

/* Network optimization hints */
.preload-critical {
  font-display: swap;
}

/* Memory efficiency */
.lazy-load {
  content-visibility: auto;
  contain-intrinsic-size: 200px;
}
